{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^6.4",
        "illuminate/database": "^8.83",
        "php-di/slim-bridge": "^3.2",
        "ext-pdo": "*",
        "deskola/simple-validator": "^1.0",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "./app/helper.php"
        ],
        "scripts": {
            "post-root-package-install": [
                "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
            ]
        }
    }
}
